.top-info
  %h4= link_to 'プロフィールページ', profile_path
  %h4= link_to 'タイムライン', timeline_path, class: 'timeline'
  %h4= link_to '投稿する', new_article_path
- @articles.each do |article|
  .articles-page
    = link_to article_path(article) do
      .name-info
        = article.user.account
        %time(datetime="#{article.created_at}")
          = time_ago_in_words(article.created_at) + "前"
      = render 'images', article: article
      .content-box
        = link_to article.content, article_path(article)
      