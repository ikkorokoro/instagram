.profile-top
  .back-btn <-
  .profile-name
-# = form_for(url: user_registration_path, method: 'patch') do |f| 
= form_with(url: profile_path, method: 'put', local: true) do |f|
  = f.label :avatar do
    - if current_user.avatar.attached?
      .profile-image
        = image_tag current_user.avatar, class: 'profile-avatar'
  = f.file_field :avatar, class: 'none'
  = f.submit '送信', class: 'form-btn'
.follow-info  
  .follow-info-Lt
    %p 44
    %p Post
  .follow-info-Ctr
    %p 100
    %p Followers
  .follow-info-Rt
    %p 100
    %p Following
.profile-grid-img
  .grid-img-one#itema
    = image_tag 'Rectangle (2).png', class: 'img'
  .grid-img-two#itemb
    = image_tag 'Rectangle (3).png', class: 'img'
  .grid-img-third#itemc
    = image_tag 'Rectangle (4).png', class: 'img' 

= javascript_pack_tag 'profile'

